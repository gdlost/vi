#!/bin/sh
# postinst script for vi
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

update-alternatives --install /usr/bin/editor editor /usr/bin/vi.traditional 10 \
    --slave /usr/share/man/man1/editor.1.gz editor.1.gz /usr/share/man/man1/vi.traditional.1.gz
update-alternatives --install /usr/bin/view view /usr/bin/view.traditional 10 \
    --slave /usr/share/man/man1/view.1.gz view.1.gz /usr/share/man/man1/view.traditional.1.gz
update-alternatives --install /usr/bin/vi vi /usr/bin/vi.traditional 10 \
    --slave /usr/share/man/man1/vi.1.gz vi.1.gz /usr/share/man/man1/vi.traditional.1.gz
update-alternatives --install /usr/bin/vedit vedit /usr/bin/vedit.traditional 10 \
    --slave /usr/share/man/man1/vedit.1.gz vedit.1.gz /usr/share/man/man1/vedit.traditional.1.gz
update-alternatives --install /usr/bin/ex ex /usr/bin/ex.traditional 10 \
    --slave /usr/share/man/man1/ex.1.gz ex.1.gz /usr/share/man/man1/ex.traditional.1.gz
update-alternatives --install /usr/bin/edit edit /usr/bin/edit.traditional 10 \
    --slave /usr/share/man/man1/edit.1.gz edit.1.gz /usr/share/man/man1/edit.traditional.1.gz

case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
